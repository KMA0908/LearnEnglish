                android:layout_marginTop="@dimen/d_12"
                android:text="Nghĩa củ từ: "
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_18"
                android:layout_height="wrap_content"/>
