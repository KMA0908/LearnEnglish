<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/d_8"
        android:gravity="center|top"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_12"
                android:text="Tên word : "
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />

            <EditText
                android:id="@+id/edt_name_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_16"
                android:layout_marginTop="@dimen/d_12"
                android:layout_marginEnd="@dimen/d_16"
                android:backgroundTint="@color/main_color"
                android:hint="Tên word"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_12"
                android:maxLines="1"
                android:text="Nghĩa word : "
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />

            <EditText
                android:id="@+id/edt_meaning_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_16"
                android:layout_marginTop="@dimen/d_12"
                android:layout_marginEnd="@dimen/d_16"
                android:backgroundTint="@color/main_color"
                android:hint="Nghĩa word"
                android:inputType="text"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />
        </TableRow>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_12"
            android:background="@drawable/custom_btn_done"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_12"
            android:paddingHorizontal="@dimen/d_20"
            android:paddingVertical="@dimen/d_4"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />
    </LinearLayout>
</layout>
