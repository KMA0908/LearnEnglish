<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/d_16"
                android:textSize="@dimen/text_18"
                android:text="Game Screen"
                android:layout_marginTop="@dimen/d_16"
                android:paddingVertical="@dimen/d_10"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/text_18"
                android:text="English Mode"
                android:paddingVertical="@dimen/d_10"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/d_16"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_flash_card"
                android:background="@drawable/custom_btn_done"
                android:textSize="@dimen/text_18"
                android:text="Flash Card"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/d_56"
                android:paddingVertical="@dimen/d_8"
                android:layout_marginBottom="@dimen/d_16"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_multiple_choice"
                android:background="@drawable/custom_btn_done"
                android:gravity="center"
                android:paddingVertical="@dimen/d_8"
                android:layout_marginBottom="@dimen/d_16"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/d_56"
                android:textSize="@dimen/text_18"
                android:text="Multiple Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_fill_in_words"
                android:background="@drawable/custom_btn_done"
                android:textSize="@dimen/text_18"
                android:text="Fill in words"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/d_56"
                android:paddingVertical="@dimen/d_8"
                android:layout_marginBottom="@dimen/d_16"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>
</layout>