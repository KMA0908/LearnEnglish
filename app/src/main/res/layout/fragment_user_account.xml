<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_user_account"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">





                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="116dp"
                            android:text="My profile"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.45" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_user"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="50dp"
                    android:src="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/rightGuideline"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="@id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar_user_account" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_edit"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/settings_items_background"
                    android:backgroundTint="#5E85F9"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@id/image_user"
                    app:layout_constraintEnd_toEndOf="@id/image_user" />


                <EditText
                    android:id="@+id/ed_first_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:background="#F5F8FA"
                    android:gravity="center"
                    android:hint="First name"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/image_user" />

                <EditText
                    android:id="@+id/ed_last_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F5F8FA"
                    android:gravity="center"
                    android:hint="Last name"
                    android:textSize="20sp"

                    android:singleLine="true"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/rightGuideline"
                    app:layout_constraintStart_toStartOf="@id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@id/ed_first_name" />

                <EditText
                    android:id="@+id/ed_date_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F8FA"
                    android:gravity="center"
                    android:hint="Date of birth"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:singleLine="true"
                    app:layout_constraintEnd_toEndOf="@id/rightGuideline"
                    app:layout_constraintStart_toStartOf="@id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@id/ed_last_name" />


                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/button_save_user_account"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@color/main_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/rightGuideline"
                    app:layout_constraintStart_toStartOf="@id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/ed_date_of_birth"
                    android:layout_marginBottom="20dp"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.04" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.96" />

            </androidx.constraintlayout.widget.ConstraintLayout>

</layout>