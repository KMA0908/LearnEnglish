<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">








            <LinearLayout
                android:id="@+id/linearlayout_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp">


                    <LinearLayout
                        android:id="@+id/linearlayout_folder_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:padding="2dp"
                            android:src="@drawable/ic_add" />
                        <TextView
                            android:id="@+id/textview_folder_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:text="Add folder"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />



                    </LinearLayout>



                    <ProgressBar
                        android:id="@+id/progressbar_folder_load"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_folder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/linearlayout_folder"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/layout_folder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearlayout_folder"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_no_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No folder"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>





    </LinearLayout>
</layout>


