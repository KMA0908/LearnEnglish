<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/ln_item_topic"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_topic"/>
                <TextView
                    android:id="@+id/tv_name_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Topic"
                    android:layout_marginStart="@dimen/d_10"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_18"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Word : "
                    android:layout_marginStart="@dimen/d_24"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_total_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginEnd="@dimen/d_10"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_mode_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:layout_marginEnd="@dimen/d_10"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"/>
            </TableRow>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:padding="@dimen/d_4"
            android:layout_marginEnd="@dimen/d_16"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</layout>