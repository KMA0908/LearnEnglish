<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_12"
            android:layout_marginBottom="@dimen/d_12"
            android:text="Thêm topic"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_12"
                android:text="Tên topic : "
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />

            <EditText
                android:id="@+id/edt_name_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_16"
                android:layout_marginTop="@dimen/d_12"
                android:layout_marginEnd="@dimen/d_16"
                android:backgroundTint="@color/main_color"
                android:hint="Tên topic"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_16"
            android:layout_marginTop="@dimen/d_12"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode topic : "
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />

            <RadioGroup
                android:id="@+id/rg_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_12"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/bt_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d_16"
                    android:text="Private" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/bt_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public" />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_12"
                android:text="Folder topic : "
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_18" />

            <Spinner
                android:id="@+id/spinner_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/d_12"
                android:layout_marginTop="@dimen/d_12"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_done"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d_20"
                android:paddingVertical="@dimen/d_4"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/tv_import"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/d_12"
                android:layout_marginTop="@dimen/d_12"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_done"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d_20"
                android:paddingVertical="@dimen/d_4"
                android:text="Import CSV"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_preview_import"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/d_12"
            android:layout_marginVertical="@dimen/d_12" />
    </LinearLayout>
</layout>
